{
  "random_seed": 21016,
  "pytorch_seed": 2335,
  "numpy_seed": 7005,
  "dataset_reader": {
    "type": "emo_reader",
    "bert_model_name": "bert-large-uncased",
    "token_indexers": {
      "bert": {
            "type": "bert-pretrained",
            "pretrained_model": "bert-large-uncased"
      }
    }
  },
  "train_data_path": "emodata/EmoTrain1.tsv",
  "validation_data_path": "emodata/EmoVal1.tsv",
  "test_data_path": "emodata/EmoTest1.tsv",
  "evaluate_on_test": true,
  "model": {
    "type": "emotion_classifier_bilstm",
    "bert_model_name": "bert-large-uncased",
    "quote_response_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "dropout": 0.2,
        "hidden_size": 100,
        "input_size": 1024,
        "num_layers": 1
    },
    "classifier_feedforward": {
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0],
      "hidden_dims": [20, 2],
      "input_dim": 200,
      "num_layers": 2
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["quote_response", "num_tokens"]],
    "batch_size": 16
  },
  "trainer": {
    "num_epochs": 30,
    "patience": 3,
    "validation_metric": "+average_F1",
    "cuda_device": [11,12],
    "optimizer": {
      "type": "adagrad",
      "lr": 2e-5
    }
  }
}