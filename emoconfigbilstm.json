{
  "random_seed": 21016,
  "pytorch_seed": 2335,
  "numpy_seed": 7005,
  "dataset_reader": {
    "type": "emo_reader",
    "token_indexers": {
      "tokens": {
        "type": "single_id"
      },
      "bert": {
            "type": "bert-pretrained",
            "pretrained_model": "bert-large-uncased"
      },
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "byte_encoding": "utf-8",
          "end_tokens": [
            260
          ],
          "start_tokens": [
            259
          ]
        },
        "min_padding_length": 5
      }
    }
  },
  "train_data_path": "emodata/EmoTrain1.tsv",
  "validation_data_path": "emodata/EmoVal1.tsv",
  "test_data_path": "emodata/EmoTest1.tsv",
  "evaluate_on_test": true,
  "model": {
    "type": "emotion_classifier_bilstm",
    "report_auxiliary_metrics": false,
    "text_field_embedder": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": "bert-large-uncased"
      },
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": [
          "bert",
          "bert-offsets"
        ],
        "token_characters": [
          "token_characters"
        ]
      },
      "token_characters": {
        "type": "character_encoding",
        "dropout": 0.2,
        "embedding": {
          "embedding_dim": 20,
          "num_embeddings": 262
        },
        "encoder": {
          "type": "cnn",
          "embedding_dim": 20,
          "ngram_filter_sizes": [
            5
          ],
          "num_filters": 100
        }
      }
    },
    "quote_response_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "dropout": 0.2,
        "hidden_size": 100,
        "input_size": 1124,
        "num_layers": 1
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["quote_response", "num_tokens"]],
    "batch_size": 16
  },
  "trainer": {
    "num_epochs": 30,
    "grad_clipping": 5.0,
    "patience": 3,
    "validation_metric": "+average_F1",
    "cuda_device": -1,
    "optimizer": {
      "type": "adagrad"
    }
  }
}