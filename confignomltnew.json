{
  "random_seed": 21016,
  "pytorch_seed": 2335,
  "numpy_seed": 7005,
  "dataset_reader": {
    "type": "hur_reader0",
    "bert_model_name": "bert-base-uncased",
    "token_indexers": {
      "bert": {
            "type": "bert-pretrained",
            "pretrained_model": "bert-base-uncased"
      }
    }
  },
  "train_data_path": "data/Train5.json",
  "validation_data_path": "data/Val5.json",
  "test_data_path": "data/Test5.json",
  "evaluate_on_test": true,
  "model": {
    "type": "emotion_classifier",
    "bert_model_name": "bert-base-uncased"
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["quote_response", "num_tokens"]],
    "batch_size": 16
  },
  "trainer": {
    "num_epochs": 30,
    "grad_clipping": 5.0,
    "patience": 3,
    "validation_metric": "+average_F1",
    "cuda_device": 6,
    "optimizer": {
        "type": "adam",
        "lr": 2e-05
    }
  }
}
