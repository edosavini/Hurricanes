{
    "dataset_reader": {
        "type": "hur_reader0",
        "bert_model_name": "bert-base-uncased",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-base-uncased"
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 16,
        "sorting_keys": [
            [
                "quote_response",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "emotion_classifier",
        "bert_model_name": "bert-base-uncased"
    },
    "train_data_path": "data/Train2.json",
    "validation_data_path": "data/Val2.json",
    "test_data_path": "data/Test2.json",
    "trainer": {
        "cuda_device": 6,
        "grad_clipping": 5,
        "num_epochs": 30,
        "optimizer": {
            "type": "adam",
            "lr": 2e-05
        },
        "patience": 3,
        "validation_metric": "+average_F1"
    },
    "evaluate_on_test": true
}