{
  "random_seed": 21016,
  "pytorch_seed": 2335,
  "numpy_seed": 7005,
  "dataset_reader": {
    "type": "emo_reader",
    "bert_model_name": "bert-large-uncased",
    "token_indexers": {
      "bert": {
            "type": "bert-pretrained",
            "pretrained_model": "bert-large-uncased"
      }
    }
  },
  "train_data_path": "emodata/EmoTrain1.tsv",
  "validation_data_path": "emodata/EmoVal1.tsv",
  "test_data_path": "emodata/EmoTest1.tsv",
  "evaluate_on_test": true,
  "model": {
    "type": "emotion_classifier",
    "bert_model_name": "bert-large-uncased"
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["quote_response", "num_tokens"]],
    "batch_size": 16
  },
  "trainer": {
    "num_epochs": 30,
    "patience": 3,
    "validation_metric": "+average_F1",
    "cuda_device": [14,15],
    "optimizer": {
      "type": "adagrad",
      "lr": 2e-5
    }
  }
}
