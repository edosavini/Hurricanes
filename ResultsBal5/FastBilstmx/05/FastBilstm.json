{
    "dataset_reader": {
        "type": "hur_reader"
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 16,
        "sorting_keys": [
            [
                "quote_response",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "sarcasm_classifier_nomlt",
        "classifier_feedforward": {
            "activations": [
                "relu",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                20,
                2
            ],
            "input_dim": 200,
            "num_layers": 2
        },
        "quote_response_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 300,
            "num_layers": 1
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "pretrained_file": "https://dl.fbaipublicfiles.com/fasttext/vectors-english/crawl-300d-2M.vec.zip",
                    "trainable": false
                }
            }
        }
    },
    "train_data_path": "data/Train5.json",
    "validation_data_path": "data/Val5.json",
    "test_data_path": "data/Test5.json",
    "trainer": {
        "cuda_device": 5,
        "grad_clipping": 5,
        "num_epochs": 30,
        "optimizer": {
            "type": "adagrad"
        },
        "patience": 3,
        "validation_metric": "+accuracy"
    },
    "evaluate_on_test": true
}