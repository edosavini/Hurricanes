{
    "dataset_reader": {
        "type": "hur_reader_emo_0",
        "bert_model_name": "bert-base-uncased",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-base-uncased"
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 16,
        "sorting_keys": [
            [
                "quote_response",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "emotion_classifier_bilstm_ff",
        "bert_model_name": "bert-base-uncased",
        "classifier_feedforward": {
            "activations": [
                "relu",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                20,
                2
            ],
            "input_dim": 200,
            "num_layers": 2
        },
        "quote_response_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 768,
            "num_layers": 1
        }
    },
    "train_data_path": "data/Train2.json",
    "validation_data_path": "data/Val2.json",
    "test_data_path": "data/Test2.json",
    "trainer": {
        "cuda_device": 1,
        "num_epochs": 30,
        "optimizer": {
            "type": "adagrad",
            "lr": 0.0001
        },
        "patience": 3,
        "validation_metric": "+average_F1"
    },
    "evaluate_on_test": true
}