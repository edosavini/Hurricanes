{
    "dataset_reader": {
        "type": "hur_reader",
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-large-uncased"
            },
            "token_characters": {
                "type": "characters",
                "character_tokenizer": {
                    "byte_encoding": "utf-8",
                    "end_tokens": [
                        260
                    ],
                    "start_tokens": [
                        259
                    ]
                },
                "min_padding_length": 5
            },
            "tokens": {
                "type": "single_id"
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 16,
        "sorting_keys": [
            [
                "quote_response",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "sarcasm_classifier_nomlt",
        "classifier_feedforward": {
            "activations": [
                "relu",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                20,
                2
            ],
            "input_dim": 200,
            "num_layers": 2
        },
        "quote_response_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 1124,
            "num_layers": 1
        },
        "text_field_embedder": {
            "allow_unmatched_keys": true,
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "bert-large-uncased"
            },
            "embedder_to_indexer_map": {
                "bert": [
                    "bert",
                    "bert-offsets"
                ],
                "token_characters": [
                    "token_characters"
                ]
            },
            "token_characters": {
                "type": "character_encoding",
                "dropout": 0.2,
                "embedding": {
                    "embedding_dim": 20,
                    "num_embeddings": 262
                },
                "encoder": {
                    "type": "cnn",
                    "embedding_dim": 20,
                    "ngram_filter_sizes": [
                        5
                    ],
                    "num_filters": 100
                }
            }
        }
    },
    "train_data_path": "data/Train1.json",
    "validation_data_path": "data/Val1.json",
    "test_data_path": "data/Test1.json",
    "trainer": {
        "cuda_device": 6,
        "grad_clipping": 5,
        "num_epochs": 30,
        "optimizer": {
            "type": "adagrad"
        },
        "patience": 3,
        "validation_metric": "+average_F1"
    },
    "evaluate_on_test": true
}